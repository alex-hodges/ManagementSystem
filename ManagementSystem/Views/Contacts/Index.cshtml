@model IEnumerable<ManagementSystem.Models.Contact>

@{
    ViewBag.Title = "Index";
}

  <div class="row" style="padding:25px;">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-4">
<h3>My Contacts</h3>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-8">
           @Html.ActionLink("Create New", "Create", "Contacts", null, new { @class = "btn btn-dark float-right", style = "min-width: 150px;"})   
        </div>
  </div>
<hr/>

<table id="contacts_table" class="display" style="width: 100%;">
   <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.County.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhonePrimary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAdress2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postcode)
        </th>
        <th></th>
    </tr>
       </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.County.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhonePrimary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetAddress1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetAdress2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postcode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>

@section scripts 
{
    <script type="text/javascript">
        $("#contacts_table").DataTable();
    </script>
}
